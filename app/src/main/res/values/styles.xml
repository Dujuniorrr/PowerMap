<?xml version="1.0" encoding="utf-8"?>
<resources >
    <style name="EditTextWithBorderBlack" >
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:background">@drawable/form_border_black</item>
        <item name="android:textColorHint">@color/sub_background_form</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:padding">20dp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="RadioButton" parent="Theme.AppCompat.Light" >
        <item name="colorAccent">@color/sub_background_form</item>
        <item name="android:textColorSecondary">@color/sub_background_form_lighter</item>
        <item name="colorControlNormal">@color/sub_background_form_lighter</item>
    </style>

    <style name="TimePickerDialogStyle" parent="@android:style/Theme.Material.Light.Dialog">
        <item name="android:windowBackground">@color/black</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:colorAccent">@color/gray_medium</item>
        <item name="android:buttonTint">@color/black</item>
    </style>

    <style name="DatePickerDialogStyle" parent="@android:style/Theme.Material.Light.Dialog">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:textColorPrimary">@color/medium_gray</item>
        <item name="android:colorAccent">@color/light_gray</item>
        <item name="android:backgroundTint">@color/black</item>
    </style>



</resources>

