<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.users.EditPasswordActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/backButonProfilePassword"
        android:layout_width="36dp"
        android:layout_height="38dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="7dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/baseline_arrow_back_24"
        android:contentDescription="@string/back_button"
        />


    <ImageView
        android:id="@+id/imgBase"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="-2dp"
        android:inputType="textPassword"
        app:srcCompat="@drawable/base_white" />

    <TextView
        android:id="@+id/textNameEditP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageProfilEditPassword"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="46dp"
        android:layout_marginEnd="46dp"
        android:layout_marginBottom="-54dp"
        android:text="@string/name"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/dark_grey"
        android:textSize="30dp"
        android:textStyle="bold" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageProfilEditPassword"
        android:layout_width="227dp"
        android:layout_height="171dp"
        android:layout_alignTop="@+id/imgBase"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="92dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="92dp"
        android:layout_marginBottom="427dp"
        android:background="@drawable/profile_decoration"
        android:contentDescription="@string/profile"
        app:civ_border_width="@dimen/cardview_compat_inset_shadow" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/editPasswordText"
        style="@style/EditTextWithBorderBlack"
        android:layout_width="338dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageProfilEditPassword"
        android:layout_marginTop="273dp"
        android:drawableEnd="@drawable/baseline_password"
        android:handwritingBoundsOffsetRight="@dimen/cardview_compat_inset_shadow"
        android:inputType="textPassword"
        android:hint="@string/old_password"
        android:singleLine="true"
        android:textColorHint="@color/red_custom" />


    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/editPasswordNewText"
        style="@style/EditTextWithBorderBlack"
        android:layout_width="338dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/editPasswordText"
        android:layout_marginTop="76dp"
        android:drawableEnd="@drawable/baseline_edit_color_24"
        android:handwritingBoundsOffsetRight="@dimen/cardview_compat_inset_shadow"
        android:hint="@string/new_password"
        android:inputType="textPassword"
        android:singleLine="true"
        android:textColorHint="@color/red_custom" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/editPassworConfirmedNewText"
        style="@style/EditTextWithBorderBlack"
        android:layout_width="338dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/editPasswordText"
        android:layout_marginTop="153dp"
        android:drawableEnd="@drawable/baseline_file_download_done_24"
        android:handwritingBoundsOffsetRight="@dimen/cardview_compat_inset_shadow"
        android:hint="@string/password_confirm"
        android:inputType="textPassword"
        android:singleLine="true"
        android:textColorHint="@color/red_custom" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/editProfileUserBtn"
        android:layout_width="wrap_content"
        android:layout_height="58dp"
        android:layout_alignTop="@+id/editPassworConfirmedNewText"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="42dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="41dp"
        android:background="@drawable/button_red"
        android:backgroundTint="@color/red_custom"
        android:text="@string/edit_password"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />


</RelativeLayout>